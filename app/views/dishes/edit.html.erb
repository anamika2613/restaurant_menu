<center><h1>Dish Information</h1></center>
<div class="container">
  <%= form_for(@dish, url: dish_path,method: :patch, html: {id: "edit-dish-form"}) do |f|%>
      <div class="img-preview-div">
        <img src="<%=@dish.try(:image).try(:url)%>" id= "blah" alt="">
      </div>

    <div>
       <%= f.file_field :image, class: "image" %>
    </div>
    <div>
      <%=f.label :name, "Dish Name"%>
      <%= f.text_field :name, placeholder: "Name"%>
    </div>
    <div>
      <%=f.label :description, "Dish Description"%>
      <%= f.text_area :description, placeholder: "Dish Description"%>
    </div>
    <div>
      <%=f.label :price, "Dish price"%>
      <%= f.text_area :price, placeholder: "Dish price"%>
    </div>
    <%#= f.hidden_field :course_id, :value => params[:course_id] %>
    <%=f.submit "Save Changes"%>
    <%= link_to '<button class="btn btn-default">Delete</button>'.html_safe, dish_path(@dish),
                method: :delete,
                data: { confirm: 'Are you sure you wanna delete this dish?' } %>
  <%end%>
</div>